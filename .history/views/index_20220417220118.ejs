        <%allMembers.forEach(function(member){ %>
          <form action="/delete" method="post">
            <div class="item">
              <div class="pl-4 pr-4 pt-4 pb-4 player-info">
                <div style="display: flex">
                  <div>
                    <p class="font-weight-bold member-name">
                      <%=member.name%>
                    </p>
                  </div>
                  <div style="margin-left: auto; font-size: 30px">
                    <p class="font-weight-bold">Role: <%=member.role%>
